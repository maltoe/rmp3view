<h1>Listing albums</h1>

<img id="cover" />

<table>
  <tr>
    <th>Artist</th>
    <th>Title</th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.artist %></td>
    <td><%= album.title %></td>
    <td><%= link_to 'Show', { :controller => "albums", :action => "show", :id => album.id } %>
    <td><%= link_to 'Show cover', 
              { :controller => "covers", :action => "thumbnail", :id => album.id }, 
              { :remote => true, :class => "showcover" } %>
    </td>
  </tr>
<% end %>
</table>

<br />
